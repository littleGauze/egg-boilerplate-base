{
  "name": "@littlegauze/egg-boilerplate-base",
  "version": "1.0.0",
  "description": "boilerplate for egg project",
  "dependencies": {},
  "devDependencies": {
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "egg-ci": "^1.11.0",
    "egg-init": "^2.2.0",
    "eslint": "^5.13.0",
    "eslint-config-egg": "^7.1.0",
    "npminstall": "^3.20.2",
    "webstorm-disable-index": "^1.2.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "autod": "autod",
    "lint": "eslint .",
    "test": "npm run lint -- --fix && npm run test-boilerplate",
    "ci": "npm run lint && npm run ci-boilerplate",
    "test-boilerplate": "npm run build && npm run install-deps && cd dist && npm test",
    "ci-boilerplate": "npm run build && npm run install-deps && cd dist && npm run ci",
    "clean": "rm -rf boilerplate/.idea boilerplate/logs boilerplate/node_modules boilerplate/run",
    "build": "npm run clean && egg-init dist --force --silent --template=./",
    "install-deps": "cd dist && npm i autod-egg && ../node_modules/.bin/autod && npm i"
  },
  "ci": {
    "version": "8"
  },
  "eslintIgnore": [
    "coverage",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/littleGauze/egg-boilerplate-base.git"
  },
  "author": "littleGauze",
  "bugs": {
    "url": "https://github.com/littleGauze/egg-boilerplate-base/issues"
  },
  "homepage": "https://github.com/littleGauze/egg-boilerplate-base#readme",
  "main": "index.js",
  "keywords": [
    "egg",
    "boilerplate"
  ],
  "license": "MIT"
}
